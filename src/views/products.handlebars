<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produtos</title>
</head>
<body>
    <h1>Lista de Produtos</h1>
    <ul>
        {{#each products}}
            <li>
                <h2>{{this.title}}</h2>
                <p>Preço: R$ {{this.price}}</p>
                <p>Categoria: {{this.category}}</p>
                <a href="/products/{{this._id}}">Ver detalhes</a>
                <button onclick="addToCart('{{this._id}}')">Adicionar ao carrinho</button>
            </li>
        {{/each}}
    </ul>

    <!-- Paginação -->
    <div>
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Página anterior</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Próxima página</a>
        {{/if}}
    </div>

    <script>
        function addToCart(productId) {
            fetch(`/api/carts/:cid/products/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ quantity: 1 }),
            }).then(response => {
                if (response.ok) {
                    alert('Produto adicionado ao carrinho!');
                } else {
                    alert('Erro ao adicionar produto ao carrinho.');
                }
            });
        }
    </script>
</body>
</html>